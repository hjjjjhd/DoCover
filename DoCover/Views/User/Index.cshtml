
@{
    Layout = null;
}
<!DOCTYPE html>
<html lang="zh">
<head>
    <meta charset="utf-8" />
    <meta http-equiv="X-UA-Compatible" content="IE=edge,chrome=1" />
    <title>小说提交</title>

    <meta content='width=device-width, initial-scale=1.0, maximum-scale=1.0, user-scalable=0' name='viewport' />
    <meta name="viewport" content="width=device-width" />

    <link rel="apple-touch-icon" sizes="76x76" href="~/assets/img/apple-icon.png" />
    <link rel="icon" type="image/png" href="~/assets/img/favicon.png" />


    <!-- CSS Files -->
    <link href="~/assets/css/bootstrap.min.css" rel="stylesheet" />
    <link href="~/assets/css/material-bootstrap-wizard.css" rel="stylesheet" />
    <link rel="stylesheet" href="../../../layuiadmin/layui/css/layui.css" media="all">
    <!-- CSS Just for demo purpose, don't include it in your project -->
    <link href="~/assets/css/demo.css" rel="stylesheet" />
    <style>
        .required:before {
            content: '*';
            color: red;
            font-size: 10px;
        }
    </style>
</head>
<body>
    <div class="image-container set-full-height" style="background-image: url('../../assets/img/wizard-city.jpg')">
        <!--   Creative Tim Branding   -->
        <!--  Made With Material Kit  -->
        <!--   Big container   -->
        <div class="container">
            <div class="row">
                <div class="col-sm-8 col-sm-offset-2">
                    <!--      Wizard container        -->
                    <div class="wizard-container">
                        <div class="card wizard-card" data-color="purple" id="wizard">
                            <form>
                                <div class="layui-form" lay-filter="">
                                    <input value="@ViewBag.id" name="user_create_id" style="display:none">
                                    <div class="wizard-header">
                                        <h3 class="wizard-title">
                                            小说提交
                                        </h3>
                                        <h5>提交您的信息及需求</h5>
                                    </div>
                                    <div class="wizard-navigation">
                                        <ul>
                                            <li><a href="#location" data-toggle="tab">作者信息</a></li>
                                            <li><a href="#type" data-toggle="tab">书籍信息</a></li>
                                            <li><a href="#facilities" data-toggle="tab">选择价位</a></li>
                                            <li><a href="#description" data-toggle="tab">其他</a></li>
                                        </ul>
                                    </div>

                                    <div class="tab-content">
                                        @*作者*@
                                        <div class="tab-pane" id="location">
                                            <div class="row">
                                                <div class="col-sm-12">
                                                    <h4 class="info-text"> 填写作者信息	</h4>
                                                </div>
                                                <div class="col-sm-5 col-sm-offset-1">
                                                    <div class="form-group label-floating">
                                                        <label class="control-label required">笔名</label>
                                                        <input type="text" class="form-control" lay-verify="required" name="penname">
                                                    </div>
                                                </div>
                                                <div class="col-sm-5 col-sm-offset-1">
                                                    <div class="form-group label-floating">
                                                        <label class="control-label required">联系邮箱</label>
                                                        <input type="text" class="form-control" lay-verify="email" name="order_cust_email">
                                                    </div>
                                                </div>
                                            </div>
                                        </div>
                                        @*书籍*@
                                        <div class="tab-pane" id="type">
                                            <h4 class="info-text">填写书籍信息</h4>
                                            <div class="row">
                                                <div class="col-sm-5 col-sm-offset-1">
                                                    <div class="form-group label-floating">
                                                        <label class="control-label required">书名</label>
                                                        <input type="text" class="form-control" lay-verify="required" name="order_title">
                                                    </div>
                                                </div>
                                                <div class="col-sm-5 col-sm-offset-1">
                                                    <div class="form-group label-floating">
                                                        <label class="control-label required">类型</label>
                                                        <select class="form-control" name="order_type" lay-ignore>
                                                            <option disabled="" selected=""></option>
                                                            <option>都市</option>
                                                            <option>玄幻</option>
                                                            <option>仙侠</option>
                                                            <option>科幻</option>
                                                            <option>恐怖</option>
                                                            <option>其他</option>
                                                        </select>
                                                    </div>
                                                </div>
                                                <div class="col-sm-5 col-sm-offset-1">
                                                    <div class="form-group label-floating">
                                                        <label class="control-label required">简介</label>
                                                        <textarea class="form-control" placeholder="" rows="5" lay-verify="required" name="order_content"></textarea>
                                                    </div>
                                                </div>
                                                <div class="col-sm-5 col-sm-offset-1">
                                                    <div class="form-group label-floating">
                                                        <label class="control-label required">需求描述</label>
                                                        <textarea class="form-control" placeholder="" rows="5" lay-verify="required" name="order_remark"></textarea>
                                                    </div>
                                                </div>
                                            </div>
                                        </div>
                                        @*价位*@
                                        <div class="tab-pane" id="facilities">
                                            <h4 class="info-text">价格 </h4>
                                            <div class="row">
                                                <div class="col-sm-6 col-sm-offset-1">
                                                    <div class="form-group label-floating">
                                                        <label class="control-label required">选择价位</label>
                                                        <select class="form-control" name="order_price" lay-verify="required" lay-ignore>
                                                            <option value="0.1">￥0.1</option>
                                                            <option value="5">￥5</option>
                                                            <option value="10">￥10</option>
                                                            <option selected value="20">￥20(推荐)</option>
                                                            <option value="50">￥50</option>
                                                            <option value="100">￥100</option>
                                                        </select>
                                                    </div>
                                                </div>
                                            </div>
                                        </div>
                                        @*其他*@
                                        <div class="tab-pane" id="description">
                                            <div class="row">
                                                <h4 class="info-text">点击获取二维码后，扫描二维码付费提交订单</h4>
                                                <div class="col-sm-12 ">
                                                    <div class="form-pay center-block" id="qr-info">
                                                    </div>
                                                </div>
                                            </div>
                                        </div>
                                    </div>
                                    <div class="wizard-footer">
                                        <div class="pull-right">
                                            <input type='button' class='btn btn-next btn-fill btn-primary btn-wd' name='next' value='下一个' />
                                            <input type='button' class='btn btn-finish btn-fill btn-primary btn-wd' name='finish' lay-submit lay-filter="createorder" value='获取二维码' />
                                        </div>
                                        <div class="pull-left">
                                            <input type='button' class='btn btn-previous btn-fill btn-default btn-wd' name='previous' value='上一页' />
                                        </div>
                                        <div class="clearfix"></div>
                                    </div>
                                </div>
                            </form>
                        </div>
                    </div>
                </div> <!-- wizard container -->
            </div>
        </div> <!-- row -->
    </div> <!--  big container -->
    </div>


    <!--   Core JS Files   -->
    <script src="~/assets/js/jquery-2.2.4.min.js" type="text/javascript"></script>
    <script src="~/assets/js/bootstrap.min.js" type="text/javascript"></script>
    <script src="~/assets/js/jquery.bootstrap.js" type="text/javascript"></script>
    @*<script src="~/layuiadmin/layui/lay/modules/layer.js"></script>*@
    <!--  Plugin for the Wizard -->
    <script src="~/assets/js/material-bootstrap-wizard.js"></script>

    <!--  More information about jquery.validate here: http://jqueryvalidation.org/	 -->
    <script src="~/assets/js/jquery.validate.min.js"></script>
    <script src="../../../layuiadmin/layui/layui.js"></script>
    <script>
        layui.config({
            base: '../../../layuiadmin/' //静态资源所在路径
        }).extend({
            index: 'lib/index' //主入口模块
        }).use(['index', 'order']);

        function sucess() {
            layer.msg('测试');
        }
    </script>
</body>
</html>

